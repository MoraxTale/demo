<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.AdventureController"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0e6d2;">

    <Label text="秘境探索" style="-fx-font-size: 24; -fx-font-family: 'SimSun'; -fx-text-fill: #8B4513;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="area1Btn"
                text="迷雾森林"
                onAction="#handleArea1"
                style="-fx-font-size: 14;
                       -fx-pref-width: 100;
                       -fx-pref-height: 80;
                       -fx-font-family: 'SimSun';
                       -fx-background-color: linear-gradient(#a5d6a7, #81c784);
                       -fx-border-color: #4CAF50;"/>

        <Button fx:id="area2Btn"
                text="熔岩洞窟"
                onAction="#handleArea2"
                style="-fx-font-size: 14;
                       -fx-pref-width: 100;
                       -fx-pref-height: 80;
                       -fx-font-family: 'SimSun';
                       -fx-background-color: linear-gradient(#ef9a9a, #e57373);
                       -fx-border-color: #f44336;"/>

        <Button fx:id="area3Btn"
                text="虚空幻境"
                onAction="#handleArea3"
                style="-fx-font-size: 14;
                       -fx-pref-width: 100;
                       -fx-pref-height: 80;
                       -fx-font-family: 'SimSun';
                       -fx-background-color: linear-gradient(#b39ddb, #9575cd);
                       -fx-border-color: #673AB7;"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="area4Btn"
                text="古神遗迹"
                onAction="#handleArea4"
                style="-fx-font-size: 14;
                       -fx-pref-width: 100;
                       -fx-pref-height: 80;
                       -fx-font-family: 'SimSun';
                       -fx-background-color: linear-gradient(#bcaaa4, #a1887f);
                       -fx-border-color: #795548;"/>

        <Button fx:id="area5Btn"
                text="无尽深渊"
                onAction="#handleArea5"
                style="-fx-font-size: 14;
                       -fx-pref-width: 100;
                       -fx-pref-height: 80;
                       -fx-font-family: 'SimSun';
                       -fx-background-color: linear-gradient(#616161, #424242);
                       -fx-border-color: #212121;"/>
    </HBox>

    <Label fx:id="lblResult" style="-fx-font-size: 16; -fx-font-family: 'SimSun'; -fx-text-fill: #8B0000;"/>
    <Label fx:id="lblTimer" style="-fx-font-size: 20; -fx-text-fill: #2E8B57;"/>

</VBox>
