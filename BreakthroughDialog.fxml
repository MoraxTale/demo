<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo1.BreakthroughDialogController"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.9); -fx-border-color: #4a752c;">
    <Label text="【破境机缘】\n请选择你的道途："
           style="-fx-text-fill: gold; -fx-font-size: 18px; -fx-wrap-text: true;"/>

    <Button fx:id="btnPath1" text="天道无情"
            onAction="#handlePath1"
            style="-fx-font-size: 14px; -fx-background-color: #2c3e50; -fx-text-fill: white;"/>

    <Button fx:id="btnPath2" text="人道轮回"
            onAction="#handlePath2"
            style="-fx-font-size: 14px; -fx-background-color: #34495e; -fx-text-fill: white;"/>

    <Button fx:id="btnPath3" text="魔道噬心"
            onAction="#handlePath3"
            style="-fx-font-size: 14px; -fx-background-color: #2c2c2c; -fx-text-fill: white;"/>
</VBox>
